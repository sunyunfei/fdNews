--创建新闻表
CREATE TABLE `fd_news`(
 news_id INT AUTO_INCREMENT COMMENT'新闻id',
 news_title VARCHAR(100) NOT NULL COMMENT'新闻标题',
 news_comment INT DEFAULT 0 COMMENT'评论数量',
 news_image VARCHAR(100) NOT NULL COMMENT'图片',
 news_browse INT DEFAULT 0 COMMENT'浏览量',
 news_url VARCHAR(100) NOT NULL COMMENT'新闻链接',
 news_type VARCHAR(5) DEFAULT '0' NOT NULL COMMENT '新闻类型',
 PRIMARY KEY(news_id)
)

--创建用户表
CREATE TABLE `fd_user`(
 user_id INT AUTO_INCREMENT COMMENT '用户id',
 user_name VARCHAR(40) DEFAULT 'default' COMMENT '用户昵称',
 user_sex VARCHAR(10) DEFAULT 'default' COMMENT '用户性别',
 user_num VARCHAR(20) DEFAULT 'default' COMMENT '学号',
 user_mobile VARCHAR(15) NOT NULL COMMENT '用户账号',
 user_pwd VARCHAR(30) NOT NULL COMMENT '用户密码',
 user_icon VARCHAR(100) DEFAULT 'default' COMMENT '用户头像',
 PRIMARY KEY(user_id)
)

--收藏表
CREATE TABLE `fd_collect`(
 collect_id INT AUTO_INCREMENT COMMENT '收藏id',
 news_id INT COMMENT '新闻的id',
 user_mobile VARCHAR(15) NOT NULL COMMENT '用户账号',
 PRIMARY KEY(collect_id)
)

--评论表创建
CREATE TABLE `fd_comment`(
 comment_id INT AUTO_INCREMENT COMMENT '评论id',
 create_time VARCHAR(50) NOT NULL COMMENT '评论时间',
 content VARCHAR(1000) NOT NULL COMMENT '评论',
 news_id INT NOT NULL COMMENT '新闻id',
 user_mobile VARCHAR(30) NOT NULL COMMENT '用户账户',
 PRIMARY KEY(comment_id)
)